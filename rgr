#!/bin/bash
# Recursive grep that avoids .svn and obvious binary files.

find -regextype posix-egrep \
    '(' -type d -name '.svn' -prune ')' -or \
    -type f \
    -not -regex '.*\.(dot|gif|ico|jpeg|jpg|mid|pdf|pem|plc|psd)$' \
    -not -regex '.*\.(ptc|pty|pyc|pyo|tif|tiff|ttf|vsd|xcf|xls|gz|zip)$' \
    -exec grep -H -n --color -E "$@" {} ';' 
